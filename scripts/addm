#!/usr/bin/env bash

# Check if URL was provided
if [ -z "$1" ]; then
  echo "Usage: $0 <YouTube URL>"
  exit 1
fi

URL="$1"

# Extract title, artist, etc., from YouTube metadata (if available)
# Download, convert to mp3, embed metadata
yt-dlp \
  -x --audio-format mp3 \
  --add-metadata \
  --metadata-from-title "%(artist)s - %(title)s" \
  -o "$HOME/Music/%(title)s.%(ext)s" \
  "$URL"
